{% extends 'base.html.twig' %}

{% block title %}Identification {{ parent() }}{% endblock %}

{% block body %}

    <main class="container">
        <div class="row">
            <div class="col-md-6 offset-3">
                <h2 class="display-4 my-3">S'identifier</h2>
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <form action="{{ path('app_login') }}" method="post">
                    <div class="form-group my-3">
                        <label for="email" class="form-label">Email:</label>
                        <input type="text" id="email" name="_username" class="form-control"  value="{{ last_username }}">
                    </div>
                    <div class="form-group my-3">
                        <label for="password" class="form-label">Password:</label>
                        <input type="password" id="password" name="_password" class="form-control">
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"> {# va permettre de prot√©ger contre les attaques #}
                    <div class="form-group my-3">
                        <button type="submit" class="form-control btn btn-outline-secondary">login</button>
                    </div>
                </form>
            </div>
        </div>
    </main>
{% endblock %}

