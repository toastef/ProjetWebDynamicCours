{% extends 'base.html.twig' %}

{% block body %}

    <main class="container">
        <div class="row">
            <div class="col-md-12 offset-1">
                <h2 class="display-4 py-4">Détail de l'oeuvre</h2>
            </div>
            <div class="col-md-4 py-5">
                <img src="{{ asset('img/oeuvres/' ~ paint.imageName) }}" alt="{{ paint.title }}">
            </div>
            <div class="col-md-8">
                <h3 class="display-5 py-5">{{ paint.title|capitalize }}</h3>
                <h4>Création: {{ paint.createdAt|date('d/m/Y') }}</h4>
                <p class="lead"> {{ paint.descrioption }}</p>
                <a href="{{ path('paintings') }}" class="btn btn-outline-dark">retour a la liste des articles</a>
            </div>
            <section class="pt6 pt-md-8">
                <div class="container">
                    <div class="row justify-content-center">
                        <button type="button" class="btn btn-secondary mb-5" data-bs-toggle="collapse" data-bs-target="#Commentaire" aria-expanded="false" aria-controls="Commentaire">
                            Laisser un commentaire
                        </button>
                    </div>
                </div>
            </section>

            <div class="col fade" id="Commentaire" tabindex="-1" aria-labelledby="commentaire" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="example">Laisser un commentaire</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            {{ form(form) }}
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </main>


{% endblock %}