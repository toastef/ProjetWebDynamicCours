{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">

        <img class="card-img my-3"
             style="height: auto; border-radius: 7px; box-shadow: rgba(0, 0, 0, 0.4) 0px 2px 4px, rgba(0, 0, 0, 0.3) 0px 7px 13px -3px, rgba(0, 0, 0, 0.2) 0px -3px 0px inset;"
             src="{{ asset('img/oeuvres/' ~ paint.imageName)|imagine_filter('detail_oeuvre') }}" alt="{{ paint.title }}">
        <div class="card mb-3 my-3 ">
            <div class="card-body my-2 ">
                <h4 class="card-title">{{ paint.title|capitalize }}
                    {%if is_granted('ROLE_USER')  %}
                    <span class="mx-5"><a href="{{ path('paint_like',{id:paint.id}) }}"><i class="icofont-like">&nbsp;{{ like }}</i></a> </span>
                    {% endif %}
                </h4>

                <h5 class="card-subtitle text-muted my-3">Cat√©gorie : {{ paint.categories.name }}</h5>
                <p class="card-text">{{ paint.descrioption }}</p>
                <p class="lead">Style : {{ paint.style.name }}</p>
                <p class="lead">Vendeur : {{ paint.vendeur.firstName }}</p>
                <p class="lead">Taille : {{ paint.width }} x {{ paint.height }}</p>
                <p class="lead">
                    {% if paint.vendu %}
                    Vendu
                    {% else %}
                    <span style="font-weight: bold ;">Prix</span> : {{ paint.price|format_currency('EUR', locale='fr') }}</p>
                {% endif %}
                <p class="card-text"><small class="text-muted">Date de mise en ligne: {{ paint.createdAt|date('d/m/Y') }}</small></p>
                <div class="text-center">
                    <a href="{{ path('paintings') }}" type="button" class="btn btn-outline-dark mx-2 ">Retour a la Gallery</a>
                    <a href="{{ path('paint_add', {'id': paint.id}) }}"  type="button" class="btn btn-outline-dark">Ajouter au panier</a>
                </div>
            </div>
        </div>
    </div>


    <main class="container">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <div class="row">
            <h3>Commentaire</h3>
            {% for coms in comments %}
                {% if coms.painting.id == paint.id %}
                    <div class="container">

                        <div class="row my-3 ">
                            <div class="col-8 ">
                                <div class="card card-white post pt-3 px-2">
                                    <div class="post-heading">
                                        <div class="float-left meta">
                                            <div class="title h5">
                                                <p class="icofont-user">  {{ coms.user.firstName }} </p>
                                            </div>
                                            <h6 class="text-muted time">Ajouter le {{ coms.createdAt|date('d/m/Y') }}</h6>
                                        </div>
                                    </div>
                                    <div class="post-description">

                                        <p class="text">{{ coms.content }}</p>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                {% endif %}
            {% endfor %}


            <div class="container">

                <button type="button" class="btn btn-secondary mb-3 my-4" data-bs-toggle="collapse"
                        data-bs-target="#Commentaire" aria-expanded="false" aria-controls="Commentaire">
                    Laisser un commentaire
                </button>

            </div>
            {%  if is_granted('ROLE_USER') %}
            <div class="col fade" id="Commentaire" tabindex="-1" aria-labelledby="commentaire" aria-hidden="true">
                <div class="modal-dialog mx-3">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="example">Laisser un commentaire</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            {{ form(form) }}
                        </div>
                    </div>
                </div>
            </div>
            {% else %}
            <h4 class="my-4">Vous devez vous connectez pour laisser un commentaire</h4>
            <div class="text-center">
            <a href="{{ path('app_login') }}" class="btn btn-secondary mb-5 mx-2">Login</a>
            <a href="{{ path('app_register') }}" class="btn btn-secondary mb-5">S'enregistrer</a>
            </div>
            {% endif %}
        </div>
    </main>


{% endblock %}