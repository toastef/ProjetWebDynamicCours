    <style>
        footer{

            bottom: 0;
            width: 100%;
            height: auto;
        }

    </style>
{% endblock %}
{% block body %}

    <div class="container ">
        <section class="row">
            <div class="col-md-8 offset-md-2">
                <h2 class="display-4 my-4">S'enregistrer</h2>
                {{ form_start(registrationForm) }}
