{% extends 'base.html.twig' %}

{% block body %}
    <style>
        #video-player {
            position: relative;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        }


    </style>
    <div class="container my-5 text-center">
        <iframe id="video-player" width="960" height="520" src="{{ tuto.content }}" title="YouTube video player"
                frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                allowfullscreen></iframe>

    </div>
    <main class="container">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <div class="row">
            <div class="col-12">
                <h3 class="text-center">Commentaire</h3>
            </div>
        </div>

        {% for coms in comments %}
            {% if coms.tutorialId.id == tuto.id %}
                <div class="container">
                    <div class="row my-3">
                        <div class="col-8 mx-auto">
                            <div class="card card-white post pt-3 px-2">
                                <div class="post-heading">
                                    <div class="float-left meta">
                                        <div class="title h5">
                                            <p class="icofont-user">{{ coms.userId.firstName }}</p>
                                        </div>
                                        <h6 class="text-muted time">Ajouter le {{ coms.createdAt|date('d/m/Y') }}</h6>
                                    </div>
                                </div>
                                <div class="post-description">
                                    <p class="text">{{ coms.content }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}

        <div class="container ">
            <button type="button" class="btn btn-secondary mb-3 my-4 mx-5" data-bs-toggle="collapse"
                    data-bs-target="#Commentaire" aria-expanded="false" aria-controls="Commentaire">
                Laisser un commentaire
            </button>

            {% if is_granted('ROLE_USER') %}
                <div class="col fade  mx-5" id="Commentaire" tabindex="-1" aria-labelledby="commentaire"
                     aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="example">Laisser un commentaire</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                {{ form(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <h4 class="my-4">Vous devez vous connecter pour laisser un commentaire</h4>
                <div class="text-center">
                    <a href="{{ path('app_login') }}" class="btn btn-secondary mb-5 mx-2">Login</a>
                    <a href="{{ path('app_register') }}" class="btn btn-secondary mb-5">S'enregistrer</a>
                </div>
            {% endif %}
        </div>
    </main>


{% endblock %}