{% extends 'base.html.twig' %}

{% block title %}Hello TutorielController!{% endblock %}

{% block body %}
    <main class="container">
        <!-- Categories -->
        <section id="oeuvres">
            <h2 class="my-5 text-black-50">Toutes nos catégories</h2>
            <div class="row">
                <!-- FILTERIZER CONTROLS -->
                <div class="col-md-12 controls-filter ">
                    <ul class="px-0">
                        <!-- For filtering controls add -->
                        <li data-filter="all" class="btn btn-outline-secondary filter-item active"> All items</li>
                        <!--variable passée dans le controller-->
                        {% for cat in categories %}
                            <li data-filter="{{ cat.id }}" class="btn btn-outline-secondary  filter-item"> {{ cat.name }}</li>
                        {% endfor %}
                    </ul>
                </div>
                <!-- FILTERIZER COURSES -->
                <div class="col-md-12 filter-container " style="overflow: hidden">
                    <!-- Card -->
                    {% for tuto in tutorials %}
                        <div class="col-md-4 filtr-item" data-category="{{ tuto.style.id }}" data-sort="value">
                            <div class="card m-3" style="min-height: 480px !important; height: auto;">
                                <div class="card-header bg-light">
                                    <h5 class="text-center">{{ tuto.title | capitalize }}</h5>
                                </div>
                                <div class="card-body">
                                    <img alt="image of tutorials" src="{{ asset('img/tutos/' ~ tuto.image)|imagine_filter('mini_oeuvre') }}"
                                         style="height: 225px;">

                                    <p class="card-text">
                                        <small class="text-muted">{{ tuto.description }}</small>
                                    </p>


                                    <div class="text-center">
                                        <a class="btn btn-secondary btn-sm"
                                           href="{{ path('tuto', {slug: tuto.slug}) }}">Détail</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}

                </div>
            </div>
        </section>
    </main>

    <script src="{{ asset('js/jquery.min.js') }}"></script>
    <script src="{{ asset('js/jquery.filterizr.min.js') }}"></script>
    <script>
        let filterizd = $('.filter-container').filterizr({
            // options here
        });
        $('.filter-item').click(function () {
            $('.filter-item').removeClass('active');
            $(this).addClass('active');
        });
    </script>
{% endblock %}

