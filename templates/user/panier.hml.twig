{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div>
            <h3>Votre Panier</h3>
        </div>

        {% if items | length > 0 %}
            <table class="table">
                <thead>
                <tr>
                    <th>Tableau</th>
                    <th>Prix</th>
                    <th>Quantit√©</th>
                    <th>Total</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.product.title }}</td>
                        <td>{{ item.product.price|format_currency('EUR', locale='fr') }}</td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ (item.product.price * item.quantity)|format_currency('EUR', locale='fr') }}</td>
                        <td>
                            <a href="{{path('paint_remove', {'id' : item.product.id})}}" class="btn btn-danger btn-sm">
                                <i class="icofont-trash"></i>
                            </a>
                        </td>
                    </tr>

                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <td colspan="3" class="text-end">Total :</td>
                    <td> {{ total|format_currency('EUR', locale='fr') }}</td>
                    <td></td>
                </tr>
                </tfoot>
            </table>
        {% else %}
            <p> Panier vide</p>
        {% endif %}
    </div>

{% endblock %}
