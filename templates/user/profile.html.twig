{% extends 'base.html.twig' %}

    {% block title %}{{ app.user.firstName }} {{ app.user.lastName }}{% endblock %}

    {% block body  %}


<div class="container-fluid my-4 " >
    <p class="text-center ">
        {# Profile #}
        <button class="btn btn-secondary px-5 mx-3  " type="button" data-bs-toggle="collapse"
                data-bs-target="#Profil"
                aria-expanded="false" aria-controls="collapseExample">
            Profil
        </button>
        {# //like #}
        <button class="btn btn-secondary px-5 mx-3" type="button" data-bs-toggle="collapse"
                data-bs-target="#Like"
                aria-expanded="false" aria-controls="collapseExample">
            Like
        </button>
        {# //tutos #}
        <button class="btn btn-secondary px-5 mx-3" type="button" data-bs-toggle="collapse"
                data-bs-target="#tutos"
                aria-expanded="false" aria-controls="collapseExample">
            Tutos
        </button>

        {# panier #}
        <button id="panier" class="btn btn-secondary px-5 mx-3 " type="button" data-bs-toggle="collapse"
                data-bs-target="#Achat"
                aria-expanded="false" aria-controls="collapseExample">
            Panier
        </button>
        {% if is_granted('ROLE_SELLER') %}
            <button class="btn btn-secondary px-5 mx-3" type="button" data-bs-toggle="collapse"
                    data-bs-target="#Vente"
                    aria-expanded="false" aria-controls="collapseExample">
                En vente
            </button>
        {% endif %}
    </p>


    {#Profile#}
    <div class="collapse show" id="Profil">
        <div class="card card-body align-items-center">
            <h2 class="text-center">Votre profile</h2>
            <div class="container  " style="display:flex;">
                <div class="user-detail-container  " >
                    <div class="user-detail">
                        <div class="upper-card mx-5">
                            <div class="row ">
                                <div class="container" style="width: 70%">
                                    <div class="card user-detail-card mx-5 " data-mh="card-one">
                                        <div class="card-img-top">
                                            <img src="img/avatar/{{ app.user.imageName }}"
                                                 alt="{{ app.user.firstName }} {{ app.user.lastName }}"
                                                 class="" style="max-width: 100%; height: auto; ">
                                        </div>
                                        <h3 class="text-center mx-3 my-3">{{ app.user.firstName|capitalize }} {{ app.user.lastName|capitalize }}</h3>
                                        <div class="px-3">
                                        <p>Email : {{ app.user.email }}</p>
                                        <p>Created : {{ app.user.createdAt|date('d/m/Y') }} </p>
                                        <p>Updated :{{ app.user.updatedAt|date('d/m/Y') }}</p>
                                        <p>Status: : {% for role in app.user.roles %}
                                                {{ role | capitalize | replace({'_': ' '}) }}
                                            {% endfor %}</p>
                                        </div>
                                        <div class="my-4 text-center ">
                                            <a class="btn btn-secondary" href="{{ path('app_seller_new') }}">Vendre un
                                                Tableau</a>
                                            <a href="{{ path('app_edit_profile') }}" class="btn btn-secondary">Modifier
                                                mon
                                                Profile</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

            {# Like #}
            <div class="collapse" id="Like">
                <div class="card card-body">
                    <h2 class="mx-3 text-center">Tableaux Préférés</h2>
                    <div class="col-md-12">
                        <div class="row">
                            {% for paint in paintings %}
                                <div class="col-md-3">
                                    <div class="card m-3">
                                        <img src="{{ asset('img/oeuvres/' ~ paint.imageName)|imagine_filter('mini_oeuvre') }}"
                                             class="card-img-top"
                                             alt="...">
                                        <div class="card-body">
                                            <h5 class="card-title">{{ paint.title | capitalize }}</h5>
                                            <p class="card-text">Prix
                                                : {{ paint.price|format_currency('EUR', locale='fr') }}</p>
                                            <div class="text-center">
                                                <a class="btn btn-secondary btn-sm"
                                                   href="{{ path('paint', {slug: paint.slug}) }}">Détail</a>
                                                <a href="{{ path('paint_add', {'id': paint.id}) }}" type="button"
                                                   class="btn btn-outline-dark btn-sm">Ajouter au panier</a>
                                                <a href="{{ path('paint_unlike', {'id': paint.id}) }}" type="button"
                                                   class="btn btn-outline-dark btn-sm">retirer</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>

    {# Tutos #}
            <div class="collapse" id="tutos">
                <div class="card card-body">
                    <h2 class="mx-3 text-center">Tutoriels Suivis</h2>
                    <div class="col-md-12">
                        <div class="row">
                            {% for tuto in tutos %}
                                <div class="col-md-3">
                                    <div class="card m-3" style="min-height: 480px !important; height: auto;">
                                        <div class="card-header bg-light">
                                            <h5 class="text-center">{{ tuto.title | capitalize }}</h5>
                                        </div>
                                        <div class="card-body">
                                            <img alt="image of tutorials" src="{{ asset('img/tutos/' ~ tuto.image)|imagine_filter('mini_oeuvre') }}"
                                                 style="height: 225px;">

                                            <p class="card-text">
                                                <small class="text-muted">{{ tuto.description }}</small>
                                            </p>

                                            <div class="text-center">
                                                <a class="btn btn-secondary btn-sm"
                                                   href="{{ path('tuto', {slug: tuto.slug}) }}">Détail</a>

                                                <a href="{{ path('tuto_remove', {'id' : tuto.id}) }}"
                                                   class="btn btn-danger btn-sm remove-link">
                                                    <i class="icofont-trash"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>


         {#Panier#}
            <div class="collapse show" id="Achat">
                <div class="card card-body">
                    <div class="container">
                        <div class="text-center">
                            <h2>Votre Panier</h2>
                        </div>

                        {% if items | length > 0 %}
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>image</th>
                                    <th>Tableau</th>
                                    <th>Prix</th>

                                    <th>Retirer</th>
                                    <th>Contacter Vendeur</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for item in items %}
                                    <tr>
                                        <td><img  src="{{ asset('img/oeuvres/' ~ item.product.imageName)|imagine_filter('mini_oeuvre') }}" style="width: 35px; height: 30px; margin-left: 5px;" alt="image oeuvre"></td>
                                        <td><a href="{{ path('paint', {slug: item.product.slug}) }}">{{ item.product.title }}</a></td>
                                        <td>{{ item.product.price|format_currency('EUR', locale='fr') }}</td>
                                     {#   <td>{{ (item.product.price * item.quantity)|format_currency('EUR', locale='fr') }}</td>#}
                                        <td>
                                            <a href="{{ path('paint_remove', {'id' : item.product.id}) }}"
                                               class="btn btn-danger btn-sm mx-2 delete-link">
                                                <i class="icofont-trash"></i>
                                            </a>
                                        </td>
                                        <td class="mx-5">
                                            <a href="#" data-bs-toggle="modal" data-bs-target="#contactModal" data-paint-id="{{ item.product.id }}">
                                                {{ item.product.vendeur.firstName }}
                                            </a>
                                        </td>
                                    </tr>

                                {% endfor %}
                                </tbody>

                            </table>
                            <div class="modal fade" id="contactModal" tabindex="-1" aria-labelledby="contactModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="contactModalLabel">Envoyer un message au vendeur</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <form action="{{ path('contact_vendeur') }}" method="post">
                                                <input type="hidden" name="paint_id" id="paintIdInput">
                                                <label>
                                                    <textarea name="message" rows="5" cols="60" placeholder="Saisissez votre message"></textarea>
                                                </label>
                                                <button type="submit" class="btn btn-secondary text-center">Envoyer</button>
                                            </form>
                                            <div calss="messageStatus" style="display: none;"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <a href="{{ path('app_facture') }}" class="btn btn-secondary">facture</a>

                        {% else %}
                            <p> Panier vide</p>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="collapse" id="Vente">
                <div class="card card-body">
                    <h2 class="mx-3 text-center ">Tableaux mis en vente</h2>
                    <div class="col-md-12 filtr-container">
                        <div class="row">
                            {% for paint in vendeur %}
                                <div class="col-md-3">
                                    <div class="card m-3">
                                        <img src="{{ asset('img/oeuvres/' ~ paint.imageName)|imagine_filter('mini_oeuvre') }}"
                                             class="card-img-top"
                                             alt="...">
                                        <div class="card-body">
                                            <h5 class="card-title">{{ paint.title | capitalize }}</h5>
                                            <p class="card-text text-muted ">
                                                {% if paint.vendu %}
                                                Vendu
                                                {% else %}
                                                Prix
                                                : {{ paint.price|format_currency('EUR', locale='fr') }}</p>
                                            {% endif %}
                                            <div class="text-center">
                                                <a class="btn btn-secondary btn-sm"
                                                   href="{{ path('paint', {slug: paint.slug}) }}">Détail</a>
                                                <a href="{{ path('app_seller_vendu', {'id': paint.id}) }}"
                                                   type="button"
                                                   class="btn btn-outline-dark btn-sm">Vendu</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>


                </div>
            </div>
        </div>

        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script>
            $(document).ready(function() {
                $('.delete-link').click(function(event) {
                    event.preventDefault();

                    var deleteLink = $(this);
                    var url = deleteLink.attr('href');
                    var id = deleteLink.data('id');

                    $.ajax({
                        url: url,
                        type: 'POST',
                        dataType: 'json',
                        success: function(response) {

                            deleteLink.closest('tr').remove();

                        },
                        error: function(xhr, status, error) {
                            // Gérer les erreurs en conséquence
                            console.error('Erreur lors de la suppression de l\'élément', error);
                        }
                    });
                });
                $('.remove-link').click(function(event) {
                    event.preventDefault();

                    var removeLink = $(this);
                    var url = removeLink.attr('href');
                    var id = removeLink.data('id');

                    $.ajax({
                        url: url,
                        type: 'POST',
                        dataType: 'json',
                        success: function(response) {

                            if (response.success) {
                                $('.modal-header').addClass('bg-success').removeClass('bg-danger');
                            } else {
                                $('.modal-header').addClass('bg-danger').removeClass('bg-success');
                            }

                        },
                        error: function(xhr, status, error) {

                            console.error('Erreur lors du retrait du tutoriel', error);
                        }
                    });
                });


                $('a[data-bs-target="#contactModal"]').click(function() {
                    var paintId = $(this).data('paint-id');
                    $('#paintIdInput').val(paintId);
                });
